@page "/home"
@using BudgetPlanner.Cache

@inject NavigationManager Navigation

<PageTitle>Dashboard</PageTitle>

<div class="container mx-auto p-6 flex justify-center">
    <div class="card shadow p-4 mx-auto" style="max-width: 500px;">
        <!-- Header -->
        <h1 class="text-4xl font-bold text-gray-800 text-center">Willkommen</h1>
        <p class="text-gray-600 mt-2 text-lg text-center">Diese Anwendung hilft dir, deine Ein- und Ausgaben effizient zu verwalten.</p>

        <div class="mt-4 p-4 bg-gray-100 rounded-lg shadow-md text-center">
            <p class="text-gray-700 text-md">Diese App wurde von <strong>Danilo Schiefer</strong> entwickelt, um dir eine einfache und intuitive Finanzverwaltung zu ermöglichen.</p>
        </div>
    </div>
</div>

@code{
    protected override async void OnInitialized()
    {
        if (UserCache.UserId <= 0)
        {
            await Application.Current.MainPage.DisplayAlert("Nicht möglich",
                "Du musst eingeloggt sein, um diese Seite nutzen zu können.",
                "Okay");

            Navigation.NavigateTo("/");
        }
    }
}